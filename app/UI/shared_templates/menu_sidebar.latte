{define menu_sidebar, $items}
	{foreach $items as $key => $item}
        {var $short = rtrim(Nette\Utils\Strings::after($key, ':', -2), ':')}
		{if is_array($item) && !empty($item)}
            <a class="btn btn-secondary m-2" n:href="$key">{$short}</a>
			{include menu_sidebar, $item}
		{elseif is_array($item) && empty($item)}
			<li>
				<a n:href="$key" class="nav-link px-0 align-middle">
					<span class="ms-1">{$short}</span>
				</a>
			</li>
		{/if}
	{/foreach}
{/define}