<div class="tab-content" id="template_shoosing_tabbed_menuContent">
    <div class="tab-pane fade p-2" id="different_layout-tab-pane" role="tabpanel" aria-labelledby="different_layout-tab" tabindex="0">
        <p class="text-secondary">Layout must be in format from "resources/templates/example_@layout.latte"</p>
        {if !empty($layout_from_resources_layout_templates)}
            radio inputs with name="layout" for shoosing different common layout 
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" name="layout" id="" value="" autocomplete="off">
                <label class="form-check-label" for="">Common</label>
            </div>
        {else}
            <p class="fw-bold"> Layout must first be uploaded to server!</p>
        {/if}
    </div>
